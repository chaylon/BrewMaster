<h3>Edit your beer list!</h3>

<%= form_for(@list) do |f| %>
  <div class="field">
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit(value="Submit") %>
  </div>

<% end %>

<%= link_to "Delete", @list, method: :delete, data: {confirm: "Are you sure?"} %>
