<div class="hero">
  <div class="hero-overlay">
    <div class="hero-content hero-content-white">
      <div class="hero-content-signup">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="devise-errors">
            <%= devise_error_messages! %>
          </div>

          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, class: "input-box" %>
          </div>

          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, class: "input-box" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "input-box" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: "input-box" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-box" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "login-link" %>
          </div>
        <% end %>

        <%= link_to "Log in", new_user_session_path %>
      </div>
    </div>
  </div>
</div>
