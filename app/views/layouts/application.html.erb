<!DOCTYPE html>
<html>
  <head>
    <title>BrewMaster</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="user-email">
      <% if user_signed_in? %>
      <div class="header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-3">
              <div class="header-logo">
                BREQEVERAV
              </div>
            </div>
            <div class="col-sm-9">
              <div class="header-nav">
                <ul>
                  <li>Welcome, <strong><%= current_user.first_name %></strong>!</li>
                  <li><%= link_to "Beer!", beers_path %></li>
                  <li>
                    <%= link_to "Lists", lists_path %>
                    <ul class="sub-nav">
                      <li><%= link_to "All Lists", lists_path %></li>
                      <li><%= link_to "New List", new_list_path %></li>
                    </ul>
                  </li>
                  <li>
                    <%= link_to "Profile", user_path(current_user) %>
                    <ul class="sub-nav">
                      <li><%= link_to "View Profile", user_path(current_user) %></li>
                      <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
                    </ul>
                  </li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid page-background">
        <div class="page-background-overlay">
          <div class="row">
            <div class="col-sm-2 no-padding">
              <div class="list-sidebar">
                <h4>Your Lists!</h4>
                <ul>
                  <% current_user.lists.each do |list| %>
                    <li><%= link_to list.name, list_path(list) %></li>
                  <% end %>
                </ul>
              </div>
            </div>
            <div class="col-sm-10">
              <div class="page-content">
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
  </body>
</html>
